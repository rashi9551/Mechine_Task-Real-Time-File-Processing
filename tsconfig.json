{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",          // This must be one of the supported values
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["ES2022", "DOM"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "ts-node": {
    "esm": true
  }
}