{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "module": "ESNext", // Use ESNext for ES Modules
    "baseUrl": "./",    // Base directory for module resolution
    "paths": {
      "*": ["src/*"]    // Map all imports to the `src` directory
    }
  },
  "include": ["src/**/*"]
}